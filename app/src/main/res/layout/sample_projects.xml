<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/green">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Project Title -->
            <TextView
                android:id="@+id/displayProject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:fontFamily="@font/poppinsbold"
                android:drawableStart="@drawable/baseline_add_task_24"
                android:drawablePadding="8dp"
                android:drawableTint="@color/white"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"/>

            <!-- Project Priority -->
            <TextView
                android:id="@+id/Projectpriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/white"
                android:drawableStart="@drawable/baseline_priority_high_24"
                android:drawableTint="@color/white"
                android:drawablePadding="8dp"

                android:layout_marginBottom="8dp"/>

            <!-- Project Date -->
            <TextView
                android:id="@+id/Projectdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppinsregular"
                android:drawableStart="@drawable/baseline_calendar_month_24"
                android:drawableTint="@color/white"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"/>

            <!-- Project Description -->
            <TextView
                android:id="@+id/Projectdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/poppinsregular"
                android:drawableStart="@drawable/baseline_description_24"
                android:drawablePadding="8dp"
                android:drawableTint="@color/white"
                android:textColor="@color/white"/>

            <!-- Edit Button -->
            <TextView
                android:id="@+id/Projectlabeledit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_button"
                android:paddingVertical="8dp"
                android:paddingHorizontal="16dp"
                android:gravity="center"
                android:elevation="3dp"
                android:padding="8dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>